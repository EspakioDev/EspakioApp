<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_espakio"
    tools:context=".activities.JuegoCinco">


    <RelativeLayout
        android:id="@+id/rlHead"
        android:layout_width="314dp"
        android:layout_height="107dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPausa"
            android:layout_width="95dp"
            android:layout_height="107dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_pausa"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationTime"
            android:layout_width="95dp"
            android:layout_height="107dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017"
            app:lottie_autoPlay="false"
            app:lottie_fileName="Timer.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="false" />

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/animationTime"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="00:60"
            android:textColor="@color/Blanco"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/txtDesc"
        android:layout_width="314dp"
        android:layout_height="162dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rlBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlHead"
        app:layout_constraintVertical_bias="0.181">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnOpcTres"
            android:layout_centerHorizontal="true"
            android:text="es a"
            android:textColor="@color/Blanco"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="es a"
            android:textColor="@color/Blanco"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnOpcDos"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btnstyle_amarillo"
            android:text="Pentagono"
            android:textColor="@color/Blanco" />

        <Button
            android:id="@+id/btnOpcUno"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:background="@drawable/btnstyle_amarillo"
            android:text="Pentagono"
            android:textColor="@color/Blanco" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Como"
            android:textColor="@color/Blanco"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnOpcTres"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/btnstyle_amarillo"
            android:text="Pentagono"
            android:textColor="@color/Blanco" />

        <TextView
            android:id="@+id/txtRespuesta"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:text="..."
            android:textAlignment="center"
            android:textColor="@color/Blanco"
            android:textSize="23sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="314dp"
        android:layout_height="172dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnRespUno"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btnstyle_amarillo"
            android:text="Button"
            android:textColor="@color/Blanco" />

        <Button
            android:id="@+id/btnRespDos"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="62dp"
            android:background="@drawable/btnstyle_amarillo"
            android:text="Button"
            android:textColor="@color/Blanco" />

        <Button
            android:id="@+id/btnRespTres"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btnstyle_amarillo"
            android:text="Button"
            android:textColor="@color/Blanco" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>