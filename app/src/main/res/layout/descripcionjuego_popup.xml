<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rlDescJuego"
        android:layout_width="368dp"
        android:layout_height="381dp"
        android:layout_marginBottom="93dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="93dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_planetaazul" />

        <ImageView
            android:id="@+id/imglogoJuego"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/img_juego_ejemplo" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp"
            android:background="@drawable/btnstyle"
            android:text="PLAY"
            android:textColor="@color/Espacio" />

        <TextView
            android:id="@+id/txtCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:text="Cancelar"
            android:textColor="@color/Blanco" />

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="110dp"
            android:layout_below="@+id/imglogoJuego"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDescJuego"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripcion"
                android:textAlignment="center"
                android:textColor="@color/Blanco"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>